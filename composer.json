{
    "name": "devdraft/sdk",
    "description": "Devdraft SDK - A comprehensive payment processing and business management API",
    "keywords": [
        "swagger",
        "php",
        "sdk",
        "rest",
        "api"
    ],
    "homepage": "https://github.com/devdraftengineer/devdraft-sdk-php",
    "license": "proprietary",
    "authors": [
        {
            "name": "Devdraft",
            "homepage": "https://github.com/devdraftengineer/devdraft-sdk-php"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "guzzlehttp/guzzle": "^7.3",
        "guzzlehttp/psr7": "^1.7 || ^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0 || ^9.0",
        "friendsofphp/php-cs-fixer": "^3.5"
    },
    "autoload": {
        "psr-4": { "DevdraftSDK\\" : "lib/" }
    },
    "autoload-dev": {
        "psr-4": { "DevdraftSDK\\" : "test/" }
    }
}
